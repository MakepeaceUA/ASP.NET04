@page
@model WebApplication1.Pages.Books.CreateModel
@{
    ViewData["Title"] = "Добавить книгу";
}

<h1>Добавить новую книгу</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="NewBook.Title" class="control-label">Название</label>
                <input asp-for="NewBook.Title" class="form-control" />
                <span asp-validation-for="NewBook.Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="NewBook.Author" class="control-label">Автор</label>
                <input asp-for="NewBook.Author" class="form-control" />
                <span asp-validation-for="NewBook.Author" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="NewBook.Genre" class="control-label">Жанр</label>
                <input asp-for="NewBook.Genre" class="form-control" />
                <span asp-validation-for="NewBook.Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Назад к списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
